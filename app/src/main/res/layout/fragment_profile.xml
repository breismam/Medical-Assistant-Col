<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProfileFragment"
    android:background="@drawable/medicina10">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_fragment_image"
        android:layout_width="@dimen/Banner_size"
        android:layout_height="@dimen/Banner_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        app:shapeAppearanceOverlay="@style/cutImage"
        app:srcCompat="@drawable/m2"
        android:scaleType="centerCrop"
        app:strokeWidth="@dimen/stroke"
        app:strokeColor="@color/black"
        />
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        android:textAppearance="@style/TextBlue.Mintic"
        tools:text="Katherine Rios"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        android:textAppearance="@style/TextBlue.Mintic"
        tools:text="kathe@gmail.com"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        android:textAppearance="@style/TextBlue.Mintic"
        tools:text="Femenino"
        />
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_fragment_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>